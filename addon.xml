<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.play.cz"
       name="play.cz"
       version="1.0.0"
       provider-name="Jakub Smutný">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.xbmcswift2" version="2.4.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>audio</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
        <website>http://www.play.cz</website>
        <source>https://github.com/sWski/plugin.audio.play.cz</source>
		<language />
        <platform>all</platform>
        <summary lang="en">PLAY.CZ - Radio stations on-line</summary>
   		<summary lang="cs">PLAY.CZ - Rádia on-line</summary>
		<description lang="en">Czech and international radio stations on-line</description>
        <description lang="cs">Česká a zahraniční rádia on-line</description>
	</extension>
</addon>
